{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": [2, "always"],
        "camelcase": "off",
        "quotes": "off",
        "no-unused-vars": "warn",
        "max-len": ["error", { "code": 120,
            "ignoreComments": true}],
        "no-console": "warn",
        "quote-props": ["off", { "unnecesary": false}],
        "no-tabs": ["off"],
        "no-mixed-spaces-and-tabs": ["off"],
        "no-useless-constructor": "off",
        "dot-notation": "off"
    }
}
